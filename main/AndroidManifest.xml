<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissão para acessar a internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AtividadeAC2"
        tools:targetApi="31">

        <!-- Define CadastroActivity como a tela inicial -->
        <activity
            android:name=".CadastroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Outras Activities -->
        <activity
            android:name=".ListaAlunoActivity"
            android:exported="true" />

        <!-- A classe Aluno não é uma Activity -->
        <activity
            android:name=".models.Aluno"
            android:exported="false" />

    </application>
</manifest>
